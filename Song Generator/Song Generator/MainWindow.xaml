<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Song Generator" Height="720" Width="510">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="textBox" Margin="10,41,206,10" TextWrapping="Wrap" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="button" Content="Generate new song" HorizontalAlignment="Left" Margin="10,16,0,0" VerticalAlignment="Top" Width="120" Click="button_Click"/>

        <TextBox x:Name="textBox2" Margin="301,67,10,10" TextWrapping="Wrap" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <TextBox x:Name="textBox3" Margin="301,16,10,0" TextWrapping="Wrap" Height="21" VerticalAlignment="Top"/>
        <Button x:Name="button2" Content="Find rhymes" HorizontalAlignment="Left" Margin="301,41,0,0" VerticalAlignment="Top" Width="78" Click="button2_Click"/>
    </Grid>
</Window>
